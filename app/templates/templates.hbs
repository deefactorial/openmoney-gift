<div class="col-sm-12 header">
  <h1>Money Designer</h1>
</div>
<div id="cards" class="col-sm-12 cards"></div>
<form id="template">
  <div class="col-sm-6 maindiv" style="padding-top: 10px;">

    <div class="form-group text-left">
      <div class="form-group text-left">
        <label class="btn btn-default btn-file">
            Front Image <input type="file" id="frontImage" name="frontImage" style="display: none;">
        </label>
        <span id="frontImageFilename" class="fileDescriptor">{{frontImageFilename}}</span>
      </div>
    </div>

    <div class="col-sm-6 form-group text-left">
      <label for="width">Width in Pixels</label>
      <input type="number" id="width" name="width" value="{{cardWidth}}" placeholder="Width in Pixels" class="form-control" />
    </div>

    <div class="col-sm-6 form-group text-left">
      <label for="height">Height in Pixels</label>
      <input type="number" id="height" name="height" value="{{cardHeight}}" placeholder="Height in Pixels" class="form-control"/>
    </div>

    <div class="col-sm-6">
      <div class="checkbox custom-control custom-checkbox">
        <label>
          <input type="checkbox" id="keyDisplay" name="keyDisplay" value="true" {{#keyDisplay}}checked="checked"{{/keyDisplay}} />
          <span class="custom-control-indicator"></span>
          Key Text Display
        </label>
      </div>
    </div>

    <div class="col-sm-6 form-group text-left">
      <label for="keysize">Key Font Size in pt</label>
      <input type="number" id="keysize" name="keysize" value="{{keySize}}" placeholder="Key Font Size" class="form-control" />
    </div>

    <div class="col-sm-6 form-group text-left">
      <label for="keyleft">Key Text X Pos. in px</label>
      <input type="number" id="keyleft" name="keyleft" value="{{keyLeft}}" placeholder="Key Text X" class="form-control" />
    </div>

    <div class="col-sm-6 form-group text-left">
      <label for="keytop">Key Text Y Pos. in px</label>
      <input type="number" id="keytop" name="keytop" value="{{keyTop}}" placeholder="Key Text Y" class="form-control" />
    </div>

    <div class="col-sm-6">
      <label for="keycolor">Key Color</label>
      <div id="keycolor" class="input-group colorpicker-component">
        <input name="keycolor" type="text" value="{{keyColor}}" class="form-control" />
        <span class="input-group-addon"><i></i></span>
      </div>
    </div>

    <div class="col-sm-6">
      <div class="checkbox custom-control custom-checkbox">
        <label>
          <input type="checkbox" id="vertical" name="vertical" value="true" {{#vertical}}checked="checked"{{/vertical}} />
          <span class="custom-control-indicator"></span>
          Vertical Key
        </label>
      </div>
    </div>

  </div>
  <div class="col-sm-6 maindiv" style="padding-top: 10px;">

    <div class="form-group text-left">
      <div class="form-group text-left">
        <label class="btn btn-default btn-file">
            Back Image <input type="file" id="backImage" name="backImage" style="display: none;">
        </label>
        <span id="backImageFilename" class="fileDescriptor">{{backImageFilename}}</span>
      </div>
    </div>

    <div class="col-sm-6">
      <div class="checkbox custom-control custom-checkbox">
        <label>
          <input type="checkbox" id="qrDisplay" name="qrDisplay" value="true" {{#qrDisplay}}checked="checked"{{/qrDisplay}} />
          <span class="custom-control-indicator"></span>
          QR Code Display
        </label>
      </div>
    </div>

    <div class="col-sm-6 form-group text-left">
      <label for="qrsize">QR size in px</label>
      <input type="number" id="qrsize" name="qrsize" value="{{qrSize}}" placeholder="QR Size in px" class="form-control" />
    </div>

    <div class="col-sm-6 form-group text-left">
      <label for="qrleft">QR code X Pos. in px</label>
      <input type="number" id="qrleft" name="qrleft" value="{{qrLeft}}" placeholder="QR code X" class="form-control" />
    </div>

    <div class="col-sm-6 form-group text-left">
      <label for="qrtop">QR code Y Pos. in px</label>
      <input type="number" id="qrtop" name="qrtop" value="{{qrTop}}" placeholder="QR code Y" class="form-control" />
    </div>

    <div class="col-sm-6 form-group">
      <label for="qrforeground">QR Foreground Color</label>
      <div id="qrforeground" class="input-group colorpicker-component">
        <input name="qrforeground" type="text" value="{{qrForeground}}" class="form-control" />
        <span class="input-group-addon"><i></i></span>
      </div>
    </div>

    <div class="col-sm-6 form-group">
      <label for="qrbackground">QR Background Color</label>
      <div id="qrbackground" class="input-group colorpicker-component">
        <input name="qrbackground" type="text" value="{{qrBackground}}" class="form-control" />
        <span class="input-group-addon"><i></i></span>
      </div>
    </div>

    <div class="col-sm-6 form-group text-left">
      <label for="templatename">Template Name</label>
      <input type="text" id="templatename" name="templatename" value="{{templateName}}" placeholder="Name" class="form-control" />
    </div>

    <div class="col-sm-6 form-group text-right saveTemplate" style="margin-top: 15px;">
      <button type="button" name="save" class="btn btn-lg btn-primary-outline">Save</button>
    </div>

  </div>
</form>
